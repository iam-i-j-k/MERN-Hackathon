generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  first_name  String
  last_name   String
  createdAt   DateTime  @default(now()) //current TimeStamp
  email       String    @unique
  role        Role      @default(USER)
  password    String
}

enum Role{
  USER
  ADMIN
}